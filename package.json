}function addTodo() {
  const input = document.getElementById('todoInput');
  const list = document.getElementById('todoList');
  
  if (input.value !== '') {
      // Create new list item
      const li = document.createElement('li');
      li.innerHTML = `
          ${input.value}
          <button onclick="this.parentElement.remove()">Delete</button>
      `;
      
      // Add to list
      list.appendChild(li);
      
      // Clear input
      input.value = '';
  }
}
